{% extends 'Admin/baseAdmin.html.twig' %}

{% block title %}Edit Ville{% endblock %}

{% block body %}
<div class="app-wrapper">
	    
    <div class="app-content pt-3 p-md-3 p-lg-4">
        <div class="container-xl">
            <h1>Edit Ville</h1>

            <form class="auth-form auth-signup-form" method="post">  
                {{ form_start(form) }}       
                <div class="email mb-3">
                    <label class="sr-only" for="signup-name">Name</label>
                    <input id="signup-name" name="nom" value="{{ ville.nom }} " type="text" class="form-control signup-name" placeholder="name" required="required">
                </div>
                <div class="email mb-3">
                    <label class="sr-only" for="signup">Pays</label>
                    <input id="signup-name" name="pays" value="{{ ville.pays }} " type="text" class="form-control signup-name" placeholder="country" required="required">
                </div>
                
                <div class="text-center">
                    <button type="submit" class="btn app-btn-primary w-100 theme-btn mx-auto">Create</button>
                </div>
                {{ form_end(form) }}
            </form><!--//auth-form-->

            <a href="{{ path('ville-index') }}" class="btn btn-secondary">back to list</a>

            {{ include('Admin/ville/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
