{% extends "base.html.twig" %}

{% block title %}Edit Profile{% endblock %}

{% block stylesheet %} {% include "profile/styleProfile.html.twig" %} {% endblock %}

{% block body %}
<div class="container mt-100 mb-100">
    <div class="main-body">
        <div class="row">
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <div class="card">
                            <div class="card-body">
                              <div class="d-flex flex-column align-items-center text-center">
                                <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                                <div class="mt-3">
                                  <h4>{{ user.nom }}</h4>
                                  <p class="text-secondary mb-1">{{ user.email }}</p>
                                  <p class="text-muted font-size-sm">{{ user.etablissement.nom }}, {{ user.ville.nom }}</p>
                                  {% include "profile/_delete_form.html.twig" %}
                                  <button class="btn btn-outline-primary"><a href="{{ path('requete-new', {'id': app.user.id}) }}">New Request</a></button>
                                </div>
                              </div>
                            </div>
                          </div>
                        <hr class="my-4">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-globe me-2 icon-inline"><circle cx="12" cy="12" r="10"></circle><line x1="2" y1="12" x2="22" y2="12"></line><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path></svg>Website</h6>
                                <span class="text-secondary">https://bootdey.com</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-github me-2 icon-inline"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>Github</h6>
                                <span class="text-secondary">bootdey</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-twitter me-2 icon-inline text-info"><path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path></svg>Twitter</h6>
                                <span class="text-secondary">@bootdey</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-instagram me-2 icon-inline text-danger"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>Instagram</h6>
                                <span class="text-secondary">bootdey</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-facebook me-2 icon-inline text-primary"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>Facebook</h6>
                                <span class="text-secondary">bootdey</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card">
                    <form method="post">
                        {{ form_start(form) }}
                        <div class="email mb-3">
                            <label class="sr-only" for="signup-name">Your Name</label>
                            <input id="signup-name" name="nom" value="{{ user.nom }}" type="text" class="form-control signup-name" placeholder="name" required="required">
                        </div>
                        <div class="email mb-3">
                            <label class="sr-only" for="signup-surname">Your Surname</label>
                            <input id="signup-surname" name="prenom" value="{{ user.prenom }}" type="text" class="form-control signup-name" placeholder="Surname" required="required">
                        </div>
                        <div class="email mb-3">
                            <label class="sr-only" for="signup-niveau">Your Level</label>
                            <input id="signup-niveau" name="niveau" value="{{ user.niveau }}" type="number" class="form-control signup-name" placeholder="niveau" required="required">
                        </div>
                        <div class="email mb-3">
                            <label class="sr-only" for="signup-email">Your Email</label>
                            <input id="signup-email" name="email" value="{{ user.email }}" type="email" class="form-control signup-email" placeholder="Email" required="required">
                        </div>
                        <div class="email mb-3">
                            <label class="sr-only" for="signup-filiere">Your filiere</label>
                            <input id="signup-filiere" name="filiere" value="{{ user.filiere }}" type="text" class="form-control signup-name" placeholder="Filiere" required="required">
                        </div>
                        <div class="password mb-3">
                            <label class="sr-only" for="signup-password">Password</label>
                            <input id="signup-password" name="password" value="{{ user.password }}" type="password" class="form-control signup-password" placeholder="Create a password" required="required">
                        </div>
                        <div class="password mb-3">
                            <label class="sr-only" for="signup-password">Town</label>
                            {{ form_widget(form.ville) }}
                        </div>
                        <div class="password mb-3">
                            <label class="sr-only" for="signup-school">School</label>
                            {{ form_widget(form.etablissement) }}
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn app-btn-primary w-100 theme-btn mx-auto">Sign Up</button>
                        </div>
                        {{ form_end(form) }}
                    </form>
                </div>
                
            </div>
        </div>
    </div>
</div>
{% endblock %}